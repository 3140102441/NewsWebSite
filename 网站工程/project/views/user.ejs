<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <% if(locals.islogin){%>
            <a class="navbar-brand" href="/">Today's &nbsp;  News&nbsp;&nbsp;&nbsp;&nbsp;<%= time %>  &nbsp; &nbsp; 用户 <%= user %>, 欢迎您！

            </a>
            <%}else{%>
            <a class="navbar-brand" href="/">Today's &nbsp; News&nbsp;&nbsp;&nbsp;&nbsp;<%= time %></a>

            <%}%>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="login">登录</a></li>
                <li><a href="register">注册</a></li>

                <% if(locals.islogin){%>
                <li><a href="../setting">设置</a></li>
                <%}%>
            </ul>
            <form class="navbar-form navbar-right">
                <input type="text" class="form-control" placeholder="Search...">
            </form>
        </div>
    </div>
</nav>

<div class="box" >

    <form class="form-signin" role="form" method="post" >
        <fieldset>
        <% if(locals.islogin&&type == 0) { %>
            <h2 class="form-signin-heading">
                <br>
            您已登录，<a  href="logout">请先登出</a>
            </h2>

        <% }else{ %>

        <h2 class="form-signin-heading">
            <% if(type == 0) { %>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;登录
            <% }else{ %>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;注册
            <% } %>
        </h2>


        <label for="inputPassword" class="sr-only">账号</label>
        <input type="text" id="inputId" name = "inputId" class="form-control"

               <% if(type == 0) { %>
               placeholder =  "账号"
                <% }else{ %>
               placeholder =  "账号(长度大于6)"
                <% } %>
               required autofocus>

        <label for="inputPassword" class="sr-only">密码</label>
        <input type="password" id="inputPassword" name = "inputPassword" class="form-control"
                <% if(type == 0) { %>
               placeholder =  "密码"
                <% }else{ %>
               placeholder =  "密码(长度大于6)"
                <% } %>
               required >


        <% if( type == 1 ) { %>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" id="inputEmail" class="form-control"  name = "inputEmail" placeholder="Email" required>
        <% } %>

            <% if( error == 1 ) { %>
        </br>
            <span id="error-message" style="font-size:16px;color:#4d0000;">注册失败，账号已存在！</span>
            <% } %>
            <% if( error == 2 ) { %>
            </br>
            <span id="error-message" style="font-size:16px;color:#4d0000;">注册失败，该邮箱已经被注册！</span>
            <% } %>
            <% if( error == 3 ) { %>
            </br>
            <span id="error-message" style="font-size:16px;color:#4d0000;">登录失败，用户名不存在！</span>
            <% } %>
            <% if( error == 4 ) { %>
            </br>
            <span id="error-message" style="font-size:16px;color:#4d0000;">登录失败，密码错误！</span>
            <% } %>

            <% if(type == 0) { %>
        <div class="checkbox">
            <label>
                <input type="checkbox" value="remember-me"> <font color="#000000">Remember me</font>
            </label>
        </div>
            <% } else{%>
            <br>
            <% }%>
            <% if(type == 0) { %>
            <button class="btn btn-lg btn-primary btn-block" type="submit" >忘记密码 </button>  <button class="btn btn-lg btn-primary btn-block" type="submit" >Sign in </button>
            <% }else{ %>
                <button class="btn btn-lg btn-primary btn-block" type="submit" >Register </button>
            <% } %>

        <% } %>


        </fieldset>
    </form>

</div> <!-- /container -->


<!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
